<!-- Validation failure messages -->
<% if @registration_for_mailing_list.errors.any? %>
<% @registration_for_mailing_list.errors.full_messages.each do |message| %>
<div class="alert alert-dismissable alert-danger">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  <%= message %>
</div>
<% end %>
<% end %>

<div class="page-header">
  <h3>Register to our mailing list</h3>

</div>

<div class="row">
  <div class="col-md-6">
    <form action="/create_registration_for_mailing_list" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for full_name -->
      <div class="form-group">
        <label for="full_name" class="control-label">
          Full name*
        </label>

        <input id="full_name" name="full_name" placeholder="Full name" class="form-control" rows="3"><%= @registration_for_mailing_list.full_name %></input>
      </div>

      <!-- Label and input for email -->
      <div class="form-group">
        <label for="email" class="control-label">
          Email adress*
        </label>

        <input id="email" name="email" placeholder="Email" class="form-control" rows="3"><%= @registration_for_mailing_list.email %></input>
      </div>

      <!-- Label and input for phone -->
      <div class="form-group">
        <label for="phone" class="control-label">
          Phone number
        </label>

        <input type="text" id="phone" name="phone" placeholder="Phone" class="form-control" value="<%= @registration_for_mailing_list.phone %>">
      </div>

      <!-- Label and input for current_company -->
      <div class="form-group">
        <label for="current_company" class="control-label">
          Current company
        </label>

        <input id="current_company" name="current_company" placeholder="Current company" class="form-control" rows="3"><%= @registration_for_mailing_list.current_company %></input>
      </div>

      <!-- Label and input for current_industry -->
      <div class="form-group">
        <label for="current_industry" class="control-label">
          Current industry
        </label>

        <%= select_tag(:current_industry, options_for_select(["Finance","Consulting","Technology - software","Technology - hardware","Entrepreneurship","Sales","Human resource", "Militery","Government"], @registration_for_mailing_list.current_industry), :class => "form-control") %>

        <!-- <input id="current_industry" name="current_industry" placeholder="Current industry" class="form-control" rows="3"><%= @registration_for_mailing_list.current_industry %></input> -->
      </div>

      <!-- Label and input for class_of -->
      <div class="form-group">
        <label for="class_of" class="control-label">
          Intrested in the class of*
        </label>

        <%= select_tag(:class_of, options_for_select(["2019","2020","2021","2022","2023"], @registration_for_mailing_list.class_of), :class => "form-control") %>

        <!-- <input type="text" id="class_of" name="class_of" placeholder="Class of" class="form-control" value="<%= @registration_for_mailing_list.class_of %>"> -->
      </div>

      <button class="btn btn-success">
        Register
      </button>
      or
      <a href="/rankings">Cancel</a>
    </form>
  </div>
</div>
